<Project>
  <Target Name="CopyThirdPartyToOutput" BeforeTargets="PrepareForBuild">
    <PropertyGroup>
      <ThirdPartyDir>$(SolutionDir)Common\Bin\$(Configuration)\</ThirdPartyDir>
    </PropertyGroup>

    <ItemGroup Condition="Exists('$(ThirdPartyDir)')">
      <ThirdPartyDlls Include="$(ThirdPartyDir)*.dll" />
      <ThirdPartyDlls Include="$(ThirdPartyDir)*.pdb" />
    </ItemGroup>

    <Copy
      SourceFiles="@(ThirdPartyDlls)"
      DestinationFolder="$(OutDir)"
      SkipUnchangedFiles="true"
      Condition="@(ThirdPartyDlls) != ''" />
  </Target>
</Project>
